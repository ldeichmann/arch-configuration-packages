package(){
  install -Dm644 user "$pkgdir"/etc/dconf/profile/user
  install -Dm644 01-caffeine "$pkgdir"/etc/dconf/db/local.d/01-caffeine
  install -Dm644 01-calendar "$pkgdir"/etc/dconf/db/local.d/01-calendar
  install -Dm644 01-dash-to-dock "$pkgdir"/etc/dconf/db/local.d/01-dash-to-dock
