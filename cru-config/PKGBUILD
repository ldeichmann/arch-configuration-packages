_ver=3.0.0
_pkgbase=cru-config
pkgname="${_pkgbase}"
pkgver=${_ver}
pkgrel=1
pkgdesc="Meta package for cru settings"
arch=(any)
url="https://www.broken-by-design.org"
license=('MIT')
source=(
50-mouse-acceleration.conf
rc-manager.conf
)
sha256sums=('0447aa600c928cefef1b9abb5615ed0a600049ba43e5d5ce992b7ebbd149c4fa'
            '2c1ccf551e29d2925ab6cbea3d7a361e6f6218a12bf1e99e870ad605962a8105')
depends=(
  'networkmanager' 'nm-dispatcher-resolv.conf' 'openresolv'
)

package(){
  install -Dm644 50-mouse-acceleration.conf "$pkgdir"/etc/X11/xorg.conf.d/50-mouse-acceleration.conf
  install -Dm644 rc-manager.conf "$pkgdir"/etc/NetworkManager/conf.d/rc-manager.conf
}
install=$pkgname.install
